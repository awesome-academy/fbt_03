 <header id="header">
    <div class="header-top">
          <div class="container">
            <div class="row align-items-center">
              <div class="col-lg-6 col-sm-6 col-6 header-top-left">
                <ul>
                  <% if logged_in? %>
                    <h6 style="color: white"> <%= t ".hello" %>, <%= current_user.name %> </h6>
                    <%= link_to t(".logout"), logout_path, method: :delete %>
                  <% else %>
                  <%= link_to t(".signup"), signup_path %>
                  <%= link_to t(".login"), login_path %>
                  <% end %>
                </ul>
              </div>
              <div class="col-lg-6 col-sm-6 col-6 header-top-right">
              <div class="header-social">
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-dribbble"></i></a>
                <a href="#"><i class="fa fa-behance"></i></a>
              </div>
              </div>
            </div>
          </div>
    </div>
    <div class="container main-menu">
          <div class="row align-items-center justify-content-between d-flex">
              <div id="logo">
                <a href="index.html"><img src="image/logo.png" alt="" title="" /></a>
              </div>
              <nav id="nav-menu-container">
                <ul class="nav-menu">
                  <li><%= link_to t(".home"), root_path %></li>
                  <li><%= link_to t(".about"), about_url %></li>
                  <li> <%= link_to t(".all_tour"), tours_path %></li>
                  <li><%= link_to t(".contact"), contact_path %></li>
                </ul>
              </nav>
          </div>
    </div>
</header>
