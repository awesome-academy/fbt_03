<% if @categories.any? %>
  <%= will_paginate @categories %>
  <% @categories.each do |category| %>
    <section class="destinations-area section-gap">
      <div class="container">
        <div class="row d-flex justify-content-center">
                <div class="title text-center">
                    <h1 class="mb-10"> <%= category.name %> </h1>
                    <p><%= category.description %></p>
              </div>
        </div>
        <div class="row">
              <% (get_tour_from_category category).each do |tour| %>
                  <div class="col-lg-4">
                    <div class="single-destinations">
                      <div class="thumb">
                        <%= image_tag (get_image tour.tour_detail), size: "720x480" %>
                      </div>
                    <div class="details">
                    <h4 class="d-flex justify-content-between">
                      <a href=""><%= tour.name %></a>
                    </h4>
                    <p>
                      <%= link_to t("static_pages.header.book_tour"), "#" %> | <%= link_to t("static_pages.header.view_detail"), tour %>
                      <p><%= t("static_pages.header.duration") %>: <%= tour.duration %></p>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
        </div>
      </div>
    </section>
   <% end %>
  <%= will_paginate @categories %>
<% end %>
