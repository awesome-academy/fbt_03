<section class="price-area section-gap">
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <div class="single-price">
          <h4><%= t ".price" %> </h4>
          <ul class="price-list">
            <li class="d-flex justify-content-between align-items-center">
              <span><%= t ".price_percent" %>: </span>
              <a href="#" class="price-btn"><%= @tour.price %></a>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="single-price">
          <h4><%= t ".duration" %></h4>
          <ul class="price-list">
            <li class="d-flex justify-content-between align-items-center">
              <span></span>
              <a href="#" class="price-btn"><%= @tour_detail.duration %></a>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="single-price">
          <h4><%= t ".start_time" %></h4>
          <ul class="price-list">
            <li class="d-flex justify-content-between align-items-center">
              <span><%= t ".gmt" %></span>
              <a href="#" class="price-btn"><%= @tour.start_date %></a>
            </li>
          </ul>
        </div>
      </div>
      <div>
        <button class="button  search"><%= t ".booking" %> </button>
      </div>
    </div>
     <div class="row d-flex justify-content-center">
        <h1 style="text-align: center"><%= @tour_detail.name %></h1>
        <p><%= @tour_detail.information %></p>
    </div>
  </div>

</section>
